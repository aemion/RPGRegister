{% extends "EmionUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

   
<div class="col-sm-3">
  {% if error %}
    <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
 
  <div class="well">
    <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

      <div class="form-group">
        <label class="control-label required" for="username">Username</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
      </div>
      

      <div class="form-group">
        <label class="control-label required" for="password">Password</label>
        <input type="password" id="password" name="_password" required="required" class="form-control" />
      </div>

      <div class="checkbox">
        <label>
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        Remember me</label>
      </div>
      
      <input type="submit" id="_submit" name="_submit" value="Log in" class="btn btn-primary"/>
    </form>
  </div>
</div>
{% endblock fos_user_content %}