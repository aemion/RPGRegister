<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}
    
    {{ form_errors(form.name) }}
    {{ form_errors(form.universe) }}
    {{ form_errors(form.description) }}
    
    <div class="form-group">
      {{ form_label(form.name, "Name", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
      <div class="col-sm-3">
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    
    <div class="form-group">
      {{ form_label(form.universe, "Universe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
      <div class="col-sm-3">
        {{ form_widget(form.universe, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_label(form.description, "Description", {'label_attr': {'class': 'col-sm-2 control-label text-left'}}) }}
      <div class="col-sm-8">
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
  
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  {{ form_rest(form) }}
  
  {{ form_end(form) }}
  
  
</div>