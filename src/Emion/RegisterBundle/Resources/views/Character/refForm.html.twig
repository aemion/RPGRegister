<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group">
      {{ form_label(form.book, "Book", {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
      {{ form_errors(form.book) }}
      <div class="col-sm-3">
        {{ form_widget(form.book, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    
    <div class="form-group">
      {{ form_label(form.page, "Page", {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
      {{ form_errors(form.page) }}
      <div class="col-sm-3">
        {{ form_widget(form.page, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>  
    
   

    <div class="form-group">
      {{ form_label(form.details, "Details", {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
      {{ form_errors(form.details) }}
      <div class="col-sm-8">
        {{ form_widget(form.details, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
  
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  {{ form_rest(form) }}
  
  {{ form_end(form) }}
  
  
</div>